<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_buffer_map"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_simple"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.esri.android.map.MapView
            android:id="@+id/map_buffer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.esri.android.map.MapView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_margin="12dp"
            app:contentPadding="4dp"
            app:cardCornerRadius="2dp"
            android:elevation="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="14sp"
                    android:text="绿化对象搜索范围(m)："/>
                <EditText
                    android:id="@+id/et_map_buffer"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    style="@style/RecordItemContent"
                    android:inputType="numberDecimal"
                    android:background="@drawable/bkg_edittext"
                    android:clickable="true"
                    android:focusable="true"/>
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_map_buffer_search"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="2dp"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:text="搜索"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp">
            <ImageButton
                android:id="@+id/imgbtn_map_buffer_locate"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="12dp"
                android:background="@drawable/ic_locate"
                android:scaleX="1.7"
                android:scaleY="1.7"/>
        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/iv_map_buffer_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:translationY="-16dp"
            android:src="@drawable/center_pin"/>
    </RelativeLayout>

</LinearLayout>
