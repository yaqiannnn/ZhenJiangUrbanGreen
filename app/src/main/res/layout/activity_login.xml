<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nju.urbangreen.zhenjiangurbangreen.startup.LoginActivity">

    <ImageView
        android:id="@+id/iv_login_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_welcome" />

    <LinearLayout
        android:id="@+id/ly_login_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_login_icon"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <EditText
            android:paddingLeft="5dp"
            android:elevation="3dp"
            android:id="@+id/edit_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_shape_up"
            android:gravity="center_vertical"
            android:hint="请输入用户名:" />

        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#444" />

        <EditText
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:elevation="3dp"
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_shape_down"
            android:gravity="center_vertical"
            android:hint="请输入密码:" />

        <!--<Button-->

            <!--android:id="@+id/btn_login"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:background="@drawable/button_shape"-->
            <!--android:elevation="8dp"-->
            <!--android:gravity="center"-->
            <!--android:shadowDx="0"-->
            <!--android:shadowDy="8"-->
            <!--android:shadowRadius="16"-->
            <!--android:text="登录"-->
            <!--android:textColor="#FFF" />-->
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"

            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_shape"
            android:text="登录"
            android:textColor="#FFF" />
    </LinearLayout>

</RelativeLayout>
